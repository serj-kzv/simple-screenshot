{
  "manifest_version": 2,
  "name": "simple-screenshot",
  "description": "simple-screenshot",
  "short_name": "simple-screenshot",
  "author": "serj-kzv",
  "version": "1",
  "homepage_url": "https://github.com/serj-kzv/simple-screenshot",
  "browser_action": {
    "browser_style": false,
    "default_icon": "favicon.ico",
    "default_title": "simple-screenshot"
  },
  "background": {
    "persistent": true,
    "page": "src/app/background/background.html"
  },
  "content_scripts": [
    {
      "js": [
        "src/app/content/content.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "src/app/option/option.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "bookmark/simpleScreenshotLevel1.html",
    "bookmark/simpleScreenshotLevel2.html",
    "bookmark/simpleScreenshotLevel4.html",
    "bookmark/simpleScreenshotLevel6.html",
    "bookmark/simpleScreenshotLevel8.html",
    "bookmark/simpleScreenshotLevel10.html"
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "64": "icon.png",
    "96": "icon.png"
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "alarms",
    "bookmarks",
    "browserSettings",
    "browsingData",
    "captivePortal",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "contextualIdentities",
    "cookies",
    "dns",
    "downloads",
    "downloads.open",
    "find",
    "geolocation",
    "history",
    "identity",
    "idle",
    "management",
    "menus",
    "nativeMessaging",
    "notifications",
    "pkcs11",
    "privacy",
    "proxy",
    "search",
    "sessions",
    "storage",
    "tabHide",
    "tabs",
    "theme",
    "topSites",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ]
}
